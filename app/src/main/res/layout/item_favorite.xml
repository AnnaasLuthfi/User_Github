<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    android:layout_gravity="center"
    app:cardCornerRadius="4dp"
    android:layout_marginBottom="5dp"
    android:id="@+id/item_favorite">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/tvImageUserFavorite"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:civ_border_width="1dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvUsernameFavorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="@string/name_user"
            android:textSize="15sp"
            app:layout_constraintStart_toEndOf="@+id/tvImageUserFavorite"
            app:layout_constraintTop_toTopOf="@+id/tvImageUserFavorite" />

        <TextView
            android:id="@+id/tvUserIdFavorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="@string/id_user"
            app:layout_constraintBottom_toBottomOf="@+id/tvImageUserFavorite"
            app:layout_constraintStart_toEndOf="@+id/tvImageUserFavorite"
            app:layout_constraintTop_toBottomOf="@+id/tvUsernameFavorite" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>